<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cs321.ReviewController">
   <children>
      <Label text="Review" style="-fx-font-family: Roboto; -fx-font-weight: bold; -fx-underline: true"/>                
         <Button text="Next Item" onAction="#next" style="-fx-font-family: Roboto"/>
         
         <Label text="Report Information" style="-fx-font-family: Roboto; -fx-font-weight: bold"/>
            <Button text="View Item" onAction="#view" style="-fx-font-family: Roboto"/>

         <Label text="Edit Report" style="-fx-font-family: Roboto; -fx-font-weight: bold"/>
            <Label text="Modify user information:" style="-fx-font-family: Roboto"/>
               <TextField fx:id="user" style="-fx-font-family: Roboto"/>
            <Label text="Modify spouse information:" style="-fx-font-family: Roboto"/>
               <TextField fx:id="spouse"  style="-fx-font-family: Roboto"/>
            <Label text="Modify marriage status:" style="-fx-font-family: Roboto"/>
               <TextField  fx:id="marriage"  style="-fx-font-family: Roboto"/>
            <Button text="Edit" onAction="#edit" style="-fx-font-family: Roboto"/>
      
         <Label text="Finish Review" style="-fx-font-family: Roboto; -fx-font-weight: bold"/>
            <Button text="Finish Item" onAction="#finish" style="-fx-font-family: Roboto"/>            

   </children>
   
   <padding> <Insets left="50.0" right="50.0"/> </padding>

</VBox>
